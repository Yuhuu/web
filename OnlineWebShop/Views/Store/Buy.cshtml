@model IEnumerable<webshop.Models.CartItem>
<p>
  <a href="/Store/Index">Back to shop</a>
</p>
<h2>Cart</h2>
<table>
  <tr>
    <th>
     Goods in your Cart:
    </th>
    <th>
      
    </th>
  </tr>
  @foreach (var item in Model)
  {
    <tr>
      <td>
        <p>You just bought @item.ItemId for @item.Vare.Pris kr</p>
        </td>
      <td>@Html.ActionLink("delete","delete")</td>
</tr>
  }
  <tr><td>Total: @Model.Sum(v => Convert.ToDouble(v.Vare.Pris)) Kr</td>
  <td>   @Html.ActionLink("Betalling", "Betalling",
                new { @class = "btn btn-primary" })
</td></tr>
</table>