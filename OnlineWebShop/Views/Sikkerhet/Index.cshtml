    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Logg inn</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.Navn)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Navn)
                @Html.ValidationMessageFor(model => model.Navn)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Passord)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Passord)
                @Html.ValidationMessageFor(model => model.Passord)
            </div>
            <p>
                <input type="submit" value="Logg inn" />
            </p>
        @if (ViewBag.LoggetInn)
        {
            <p style="color:green">Innlogget som </p>
            <div class="editor-label">
                @Html.LabelFor(model => model.Navn)
            </div>
            <div>
                @Html.ActionLink("Logg av", "Loggav")<br />
                @Html.ActionLink("Tilbake til Lista", "Index")<br />
                @Html.ActionLink("Minside", "InnLoggetSide")<br />
            </div>
        }
        else
        {
            <p style="color:red">Ikke innlogget</p>
            <div>  
                @Html.ActionLink("Tilbake til Lista", "Index")<br />
                @Html.ActionLink("Registrer deg som bruker", "Registrer")<br />              
            </div>
        }
        </fieldset>

    }

